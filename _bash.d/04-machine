# Step 3.  Machine specific localizations.  It relies on LOCDOM being set
# since depending on the value of bash's HOSTNAME variable, we could work
# on more than one machine named www or mail or something...
if [ -n "${LOCDOM}" ]; then
    if [ -d "machines/${LOCDOM}/${HOSTNAME}" ]; then
	[ -n "$BWVERBOSE" ] && echo Running ${HOSTNAME} specific init.
	{
	    cd machines/${LOCDOM}/${HOSTNAME}
	    for f in *; do
		[ -n "$BWVERBOSE" ] && echo "Running machines/${LOCDOM}/${HOSTNAME}/$f"
		source $f
	    done
	    cd ${BASHDIR}
	}
    fi
else
    echo "The platform initialization didn't set \$LOCDOM"
    echo "This means that no machine specific init will happen..."
fi

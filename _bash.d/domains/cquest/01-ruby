# -*- shell-script -*-
# This is the CQUEST ruby environment.  It's shared via a rsynced source
# in /local.

# we also might have ruby 1.8.7 installed separately via a non-rhel
# package; give it precedence if found
if [ -d /usr/ruby-enterprise ]; then
    PATH=/usr/ruby-enterprise/bin:$PATH
else
    GEM_HOME=/local/lib/ruby/gems/1.8
    RUBYOPT=rubygems
    RUBYLIB=/local/lib/ruby/site_ruby/1.8/:/local/lib/ruby

    export GEM_HOME RUBYOPT RUBYLIB
fi

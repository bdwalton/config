# -*- shell-script -*-
alias howmany='sort | uniq -c | sort -nr'

# an evil holdover my the dark days of my dos use.  could likely omit this now.
alias cd..='cd ..'

#only set this if nothing earlier has done it already (more specifically)
case "$(type -t emacs)" in
    alias) ;;
    *) alias emacs="emacs -nw";;
esac

if [ "$GNULS" == "true" -a "$GNUGREP" == "true" ]; then
    alias lc="list $*"
    alias lca="list -A $*"
else
    alias lc='ls -l | more'
    alias lca='ls -lA | more'
fi

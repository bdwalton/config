# if we're connected via ssh, ensure we get better TERM stuff setup.
if [ -n "$SSH_CONNECTION" ]; then
    cswterm=/opt/csw/share/terminfo
    if [ -d $cswterm ]; then
	export TERM=xterm-color
	export TERMINFO=$cswterm
    else
	export TERM=xterm
    fi
fi

if [ -d /opt/csw/share/man ]; then
   export MANPATH=/opt/csw/share/man:/usr/share/man:/usr/openwin/man
fi

for ver in 4 3; do
    MD=/opt/csw/gcc${ver}/man
    if [ -d ${MD} ]; then
	export MANPATH=$MANPATH:$MD
	break
    fi
done

if [ -f /opt/csw/bin/less ]; then
	export LESS="-x2 -e -F -X -R -M"
fi

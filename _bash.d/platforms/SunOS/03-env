# if we're connected via ssh, ensure we get better TERM stuff setup.
if [ -n "$SSH_CONNECTION" ]; then
   export TERM=xterm-color
fi

if [ -d /opt/csw/share/terminfo ]; then
	export TERMINFO=/opt/csw/share/terminfo
fi

if [ -d /opt/csw/share/man ]; then
   export MANPATH=/opt/csw/share/man:/usr/share/man
fi

if [ -f /opt/csw/bin/less ]; then
	export LESS="-x2 -e -F -X -R -M"
fi

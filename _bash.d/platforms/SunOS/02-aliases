# We have better versions of these on Linux, but for now we'll suffer
# in solaris (what else is new?)

if [ -f /opt/csw/bin/ggrep -a ! -d /opt/csw/gnu ]; then
   echo "Considering running: pkg-get -i gnulinks"
   alias grep=ggrep
   alias egrep=gegrep
   alias fgrep=gfgrep
fi

alias lca='ls -lA | more'
alias lc='ls -l | more'